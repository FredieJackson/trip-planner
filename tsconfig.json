{
    "include": ["src", "custom.d.ts"],
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "lib": ["dom", "dom.iterable", "es2017"],
      "allowJs": true,
      // "checkJs": true,
      "jsx": "react",
      "strict": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmit": true,
      "skipLibCheck": true
    },
    "exclude": ["node_modules"],
  }